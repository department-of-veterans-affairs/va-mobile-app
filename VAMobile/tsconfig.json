{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"allowJs": true,
		"jsx": "react-native",
		"noEmit": true,
		"isolatedModules": false,
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"types": [
			"node",
			"webdriverio/async",
			"jest",
			"@wdio/mocha-framework"
		]
	},
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js"
	],
	"include": [
		"global.d.ts",
		"src",
		"__tests__"
	]
}
