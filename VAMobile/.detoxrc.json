{
  "testRunner": {
    "$0": "jest",
    "args": {
      "config": "detoxconfig.js"
    },
    "jest": {
      "setupTimeout": 300000,
      "reportSpecs": false,
      "reportWorkerAssign": false
    }
  },
  "skipLegacyWorkersInjection": true,
  "apps": {
    "ios": {
      "type": "ios.app",
      "binaryPath": "ios/output/Build/Products/Release-iphonesimulator/VAMobile.app",
      "build": "cd ios && xcodebuild -configuration Release -workspace VAMobile.xcworkspace -scheme VAMobileRelease -derivedDataPath ./output -sdk iphonesimulator BUILD_LIBRARIES_FOR_DISTRIBUTION=YES build && cd .."
    },
    "android": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd android ; ./gradlew app:assembleDebug app:assembleAndroidTest -DtestBuildType=debug; cd .."
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 15 Pro Max",
        "os": "iOS 17.2"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "Pixel_6_Pro_API_33"
      }
    }
  },
  "configurations": {
    "ios": {
      "device": "simulator",
      "app": "ios",
      "headless": "false"
    },
    "android": {
      "device": "emulator",
      "app": "android"
    }
  },
  "behavior": {
    "init": {
      "exposeGlobals": false
    }
  },
  "artifacts": {
    "plugins": {
      "screenshot": {
        "enabled": true,
        "shouldTakeAutomaticSnapshots": true,
        "keepOnlyFailedTestsArtifacts": false,
        "takeWhen": {
          "testStart": false,
          "testDone": true,
          "appNotReady": true
        }
      }
    }
  }
}
